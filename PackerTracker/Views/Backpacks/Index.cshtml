@using PackerTracker.Models;

<h1>To Do List</h1>
@if (Model.Count == 0)
{
  <p>There are no items in the list.</p>
}
<ul>
  @foreach (Backpack backpack in Model)
  {
    <li><a href="/backpack/@backpack.Id">@backpack.Thing</a></li>
  }
</ul>

<a href="/items/new">Add a new item.</a>

<form action="/items/delete" method="get">
  <button type="submit" name="button">Clear All Items</button>
</form>

